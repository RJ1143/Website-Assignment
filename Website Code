<?php
$servername = "mi-linux.wlv.ac.uk";
$username = "2207931";
$password = "64zo0b";
$dbname = "db2207931";

$conn = mysqli_connect($servername, $username, $password, $dbname);

if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

// Check if the form is submitted
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    // Retrieve user input from the form
    $bookToDelete = $_POST['book'];
    $authorToDelete = $_POST['author'];
    $genreToDelete = $_POST['genre'];

    // SQL query to delete a record based on conditions
    $sql = "DELETE FROM bookrecords WHERE Book = '$bookToDelete' AND Author = '$authorToDelete' AND Genre = '$genreToDelete'";

    // Execute the query
    if ($conn->query($sql) === TRUE) {
        echo "Record deleted successfully";
    } else {
        echo "Error deleting record: " . $conn->error;
    }
}

// Close the database connection
$conn->close();
?>
